<div class="row">
		 <% posts.each do |post| %>
					    <aside class="col-sm-4">
							     <div class="card-deck" style="width:15rem">
							        <div class="card text-center">
							           <div class="card-img-top">
																		<!--ユーザー名-->
																		<p><%= link_to post.user.name, user_path(post.user) %></p>
																		<!--画像の表示-->
																		<%if post.image? %> 
					                <%= image_tag post.image.url, size: "200x100", alt: "アイコン" %>
					                <% else %>
					                <%= image_tag "/assets/beans.jpg", :size => '200x100' %>
							           <% end %>
							           </div>
							           <div class="card-body">
		                   <!--投稿内容の表示-->
		                   <h5><%= post.content %></h5>
							           </div>
		                   <!--投稿時間  -->
		                   <div class="card-footer">
		     	             <%= time_ago_in_words(post.created_at) %>
							               <!-- いいね登録ボタン -->
							               <%= render 'favorites/favorite_button', post: post %>
							               <!-- 編集ボタン -->
							               <% if current_user == post.user %>
							               <%= link_to edit_post_path(post), class: 'btn btn btn-secondary 
							               text-white btn-sm' do %><i class="fas fa-pen"></i><% end %>
							               <% end %>
							               <!--削除ボタン-->
							               <% if current_user == post.user %>
							               <%= link_to post, method: :delete, data: { confirm: "You sure?" },
							               class: 'btn btn-danger text-white btn-sm' do %> <i class="far fa-trash-alt"></i><% end %>
							               <% end %>
							        </div>
							     </div>
					  　</aside>
		 <% end %>
</div>
 <%#= paginate posts %>
  
  
