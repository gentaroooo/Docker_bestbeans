<ul class="list-unstyled">
  <% posts.each do |post| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(post.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to post.user.name, user_path(post.user) %> <span class="text-muted">posted at <%= post.created_at %></span>
        </div>
        <div>
          <p class="mb-0"><%= post.content %></p>
        </div>
      <div>
  
          
          <!-- いいね登録ボタン -->
       　  <%= render 'favorites/favorite_button', post: post %>
       　<!-- 編集ボタン -->
       　  <% if current_user == post.user %>
            <%= link_to "編集", edit_post_path(post), class: 'btn btn-dark btn-sm' %>
          <% end %>
          <!--削除ボタン-->
          <% if current_user == post.user %>
            <%= link_to "削除", post, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
       　  
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate posts %>
</ul>