<div class="container">
   <div class="row">
      <div class="col-sm-12">
         <div class="text-center">
            <ul class="nav nav-pills nav-justified mb-3">
               
               <li class="nav-item"><a href="<%= root_url %>" class="nav-link
               <%= 'active' if current_page?(root_url) %>">フォローした投稿
               <span class="badge badge-secondary"></a></li> 
               
               <li class="nav-item"><a href="<%= posts_path %>" class="nav-link
               <%= 'active' if current_page?(posts_path) %>">全ての投稿
               <span class="badge badge-secondary"></a></li>
            </ul>
            
            <p><%= render 'posts/posts', posts: @posts %></p>
            <p><%= paginate @posts %></p>
         </div>  
      </div>      
   </div>
</div>
