<div class="col-sm-6 offset-sm-3">
    <div class="text-center">
        <h2><i class="fas fa-user-edit"></i>ユーザー編集</h2>
        <%= form_with(model: @user, local: true) do |f| %>
       
            <div class="form-group">
            <%= f.label :name, 'ユーザー名' %>
            <%= f.text_field :name, class: 'form-control' %>
            </div>
            
            <div class="form-group">
            <%= f.label :email, 'メールアドレス' %>
            <%= f.email_field :email, class: 'form-control' %>
            </div>
            
            <%if @user.image? %> 
                <!--画像登録があった場合-->
                <div class="card">
                        <div class="card-body">
                        <p><i class="fas fa-images"></i>登録した画像</p>
                        <%= link_to (image_tag "#{@user.image.url}", class: "user-icon", size: "180x150", alt: "登録画像") %>
                        </div>
                    
                        <p class="card-text">
                        <i class="fas fa-exchange-alt"></i>画像変更
                        <%= f.file_field :image %> 
                        </p>   
                </div>
                <p></p>
                
                <% else %>
                <!--画像登録がなかった場合-->
                <div class="card">
                    <div class="card-body">
                        <i class="fas fa-images"></i>画像アップ
                        <%= f.file_field :image %> 
                    </div>
                </div>
                <p></p>
            <% end %>
            
            <%= f.submit '変更する', class: 'btn btn-primary btn-block' %>
        <% end %>
    </div>  
</div>
