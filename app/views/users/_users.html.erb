<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media user-image">
    　　  　<!--ユーザー画像の表示-->
    　　    　<div clas=" user-ima"" user-image">
              <% if user.image? %> 
              <%= image_tag user.image.url, size: "100x100", alt: "アイコン"%>
              <% else %>
              <%= image_tag "/assets/human.png", :size => '100x100' %>
              <% end %>
            </div>
          <div class="media-body">
              <%= user.name %>
          <div>
          <p><%= link_to 'プロフィール詳細', user_path(user) %></p>
          </div>
        
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>